<%layout("/layouts/boilerplates") %>

<div class="row mt-3">
    <div class="col-8 offset-2">

    <br>
    <h3>Edit your profile</h3>
    
    <!-- we are sending put request and  for that we    have to install npm override package -->
    <form method="POST"  action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" >
        <div class="mb-3">
            <label for="image" class="form-lable">Title</label>
            <input value="<%=listing.title %>" name="listing[title]" type="text" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div> 
        </div>
       
    
        <div class="mb-3">
            <label for="description" class="form-lable">Description</label>
            <textarea  name="listing[description]" type="text"  class="form-control" required><%=listing.description %>   </textarea>
            <div class="invalid-feedback">
                Enter short Description!
              </div>
        </div>

        <div class="mb-3">
           
            <label for="image" class="form-lable">Image Link</label>
            <input placeholder="enter URL/link" value="<%=listing.image.url%>" name="listing[image]" type="text" class="form-control" required>
            <div class="invalid-feedback">
                Enter  valid image link!
              </div>
        </div>
       
        <div class="row">
        
        <div class="mb-3 col-md-4">
            <label for="price" class="form-lable">Price</label>
            <input value="<%=listing.price %>" name="listing[price]" type="number" class="form-control" required>
            <div class="invalid-feedback">
                Enter valid price!
              </div>
        </div>

        <div class="mb-3  col-md-8">
            <label for="country" class="form-lable">Country</label>
            <input value="<%=listing.country %>" name="listing[country]" type="text" class="form-control" required>
            <div class="invalid-feedback">
                Enter valid Country name!
              </div>
        </div>

    </div>
      <div class="mb-3 ">

        <label for="location" class="form-lable">Location</label>
        <input value="<%=listing.locaton %>" name="listing[location]" type="text" class="form-control" required>
        <div class="invalid-feedback">
            Enter valid location!
          </div>
      </div>
        
       
        
        <button class="btn btn-dark edit-btn mt-3">Edit</button>
<br><br>
    </form>
</div>
</div>
<script src="/js/script.js"></script>

